{
  "name": "launcher",
  "version": "0.1",
  "build": "",

  "root": "launcher",
  "venv" : true,
  "dir": "deploy/build",
  "output": "deploy/output/launcher",
  
  "output_to_root": true,
  "requires": ["frontend", "server"],
  "script": "build.ts",
  "targets": [
    {
      "glob_source": "build/dist/Oracle-Launcher.exe",
      "output": "/Oracle-Launcher.exe",
      "release_only": true
    },
    {
      "glob_source": "../launcher/favicon.ico",
      "output": "/favicon.ico"
    },
    {
      "glob_source": "../launcher/README.md",
      "output": "/README.md"
    },
    {
      "glob_source": "../launcher/LICENSE",
      "output": "/LICENSE"
    },
    {
      "glob_source": "../launcher/launcher.example.toml",
      "output": "/launcher.toml"
    }
  ]
}
